<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/splash_900"
    tools:context="bravest.ptt.efastquery.SplashActivity">

    <ImageView
        android:padding="16dp"
        android:id="@+id/splash_seal_start"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        app:srcCompat="@drawable/seal_out_drawable" />

    <ImageView
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:paddingBottom="48dp"
        android:id="@+id/splash_app_name"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/app_name_drawable"/>

    <Button
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="48dp"
        android:id="@+id/splash_app_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="微信登录"
        android:textSize="18sp"
        android:textColor="#dddddd"
        android:textStyle="bold"
        android:background="@drawable/login_selector"
        />

</LinearLayout>

<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/MaterialBlue_500</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/home_red_500_4_toolbar</item>
        <item name="colorPrimaryDark">@color/home_red_600_4_status_bar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.export" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/export_orange_500_4_toolbar</item>
        <item name="colorPrimaryDark">@color/export_orange_600_4_status_bar</item>
        <item name="colorAccent">@color/export_orange_600_4_status_bar</item>
    </style>
</resources>

<resources>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/MaterialBlue_500</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/home_red_500_4_toolbar</item>
        <item name="colorPrimaryDark">@color/home_red_600_4_status_bar</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.export" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/export_orange_500_4_toolbar</item>
        <item name="colorPrimaryDark">@color/export_orange_600_4_status_bar</item>
        <item name="colorAccent">@color/export_orange_600_4_status_bar</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/splash_900</item>
        <item name="colorPrimaryDark">@color/splash_1000</item>
        <item name="colorAccent">@color/login_pressed</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="main_panel_background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorSearchMainPanelBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="main_panel">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/search_main_panel</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="main_panel_search">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="main_panel_search_edit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">5</item>
        <item name="android:background">@drawable/search_main_panel</item>
        <item name="android:hint">@string/translate_hint</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/colorTranslateHint</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="main_panel_search_clean">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/search_main_panel</item>
        <item name="android:clickable">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:src">@mipmap/delete_input</item>
    </style>

    <style name="main_panel_search_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/search_main_panel</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@mipmap/search_button</item>
    </style>

    <style name="main_panel_show">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:background">@color/colorSearchMainPanel</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

    <style name="main_panel_show_history">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="main_panel_show_result">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorSearchMainPanel</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="main_panel_show_result_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorSearchMainPanel</item>
        <item name="android:enabled">false</item>
        <item name="android:gravity">top</item>
        <item name="android:inputType">none</item>
        <item name="android:textColor">@android:color/holo_orange_dark</item>
    </style>

    <style name="main_panel_functions">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_above">@+id/main_panel</item>
        <item name="android:layout_alignLeft">@+id/main_panel</item>
        <item name="android:background">#00000000</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="main_panel_speak">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@mipmap/voice_item</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="main_panel_favorite">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@mipmap/favorite_item</item>
        <item name="android:visibility">invisible</item>

    </style>

    <style name="file_manager_spinner" parent="Platform.Widget.AppCompat.Spinner">
    </style>

    <!-- Custom progress dialog -->
    <style name="NoBorderProgressDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!--<item name="android:backgroundDimEnabled">false</item>-->
        <item name="android:textColor">#FFFFFF</item>
        <item name="colorAccent">@color/login_pressed</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>


    <!--加载进度对话框样式-->
    <style name="Dialog_Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowBackground">@android:color/transparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

    <style name="Dialog_Error" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/login_pressed</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/favorite_purple_100_4_item_card">

    <LinearLayout
        android:id="@+id/item_fav_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_fav_word"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="word"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/item_fav_favorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:padding="8dp"
                android:src="@mipmap/favorite_item" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_fav_speak_uk"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="[adad]" />

            <TextView
                android:id="@+id/item_fav_speak_us"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:text="[akldad]" />
        </LinearLayout>


        <TextView
            android:id="@+id/item_fav_explains"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="n. nihao" />
    </LinearLayout>
</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_file_manager"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/item_file_manager_folder"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="13dp"
        android:background="@drawable/oval_file"
        android:src="@mipmap/folder" />

    <TextView
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:id="@+id/item_file_manager_name"
        android:layout_width="1000dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="bravest.ptt.efastquery" />
</LinearLayout>
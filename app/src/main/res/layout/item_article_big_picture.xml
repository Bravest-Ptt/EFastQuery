<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_dp_4"
    android:paddingEnd="@dimen/margin_dp_10"
    android:paddingStart="@dimen/margin_dp_10"
    android:paddingTop="@dimen/margin_dp_4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_dp_4"
        android:paddingEnd="@dimen/margin_dp_10"
        android:paddingStart="@dimen/margin_dp_10"
        android:paddingTop="@dimen/margin_dp_4">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:contentDescription="image"
            android:scaleType="fitXY"
            android:src="@drawable/toolbar_button_pressed" />

        <LinearLayout
            android:layout_marginTop="4dp"
            android:id="@+id/text_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:padding="@dimen/margin_dp_2"
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="勇敢跳出自己的舒适区！7种方式挑战自己"/>
            <LinearLayout
                android:id="@+id/text_summary_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_summary_tag"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:text="美文"/>
                <TextView
                    android:id="@+id/text_summary_read"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:text="149245阅读"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

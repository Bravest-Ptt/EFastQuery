<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_dp_4"
    android:paddingEnd="@dimen/margin_dp_10"
    android:paddingStart="@dimen/margin_dp_10"
    android:paddingTop="@dimen/margin_dp_4">

    <ImageView
        android:id="@+id/image"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:contentDescription="image"
        android:scaleType="fitXY"
        android:src="@drawable/toolbar_button_pressed" />

    <LinearLayout
        android:layout_marginStart="@dimen/margin_dp_8"
        android:id="@+id/text_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4">

        <TextView
            android:padding="@dimen/margin_dp_2"
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:textSize="18sp"
            android:text="勇敢跳出自己的舒适区！7种方式挑战自己"/>
        <LinearLayout
            android:id="@+id/text_summary_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_summary_tag"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text="美文"/>
            <TextView
                android:id="@+id/text_summary_read"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:text="149245阅读"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
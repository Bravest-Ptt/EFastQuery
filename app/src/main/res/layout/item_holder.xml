<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:clickable="true"
    android:paddingBottom="1dp">

    <LinearLayout
        android:id="@+id/item_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/item_content_request"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_height"
            android:gravity="center"
            android:text="History"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/item_content_explains"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:gravity="center"
            android:minWidth="5000dp"
            android:paddingLeft="4dp"
            android:singleLine="true"
            android:text="History"
            android:textColor="#888888" />
    </LinearLayout>


    <ImageView
        android:id="@+id/item_voice"
        android:layout_width="@dimen/item_width"
        android:layout_height="@dimen/item_height"
        android:background="@color/MaterialYellow_400_4_item_favorite"
        android:padding="@dimen/item_image_padding"
        android:src="@mipmap/voice_item" />

    <ImageView
        android:id="@+id/item_delete"
        android:layout_width="@dimen/item_width"
        android:layout_height="@dimen/item_height"
        android:background="@color/MaterialBluegray_500_4_item_delete"
        android:padding="@dimen/item_image_padding"
        android:src="@mipmap/delete_item" />
</com.mcxtzhang.swipemenulib.SwipeMenuLayout>
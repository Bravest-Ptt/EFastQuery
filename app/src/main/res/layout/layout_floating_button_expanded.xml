<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/float_button_expanded"
    android:layout_width="@dimen/search_expanded_panel_size"
    android:layout_height="@dimen/search_expanded_panel_size"
    android:clickable="true">

    <ImageView
        android:id="@+id/center"
        android:layout_width="@dimen/search_expanded_level1_size"
        android:layout_height="@dimen/search_expanded_level1_size"
        android:background="@drawable/search_floating_selector"
        android:clickable="false"
        android:src="@drawable/ic_playstore_icon" />

    <ImageView
        android:id="@+id/exit"
        android:layout_width="@dimen/search_expanded_level2_size"
        android:layout_height="@dimen/search_expanded_level2_size"
        android:background="@drawable/search_floating_selector"
        android:clickable="false"
        android:padding="10dp"
        android:src="@drawable/ic_arrow" />

    <ImageView
        android:id="@+id/select"
        android:layout_width="@dimen/search_expanded_level2_size"
        android:layout_height="@dimen/search_expanded_level2_size"
        android:background="@drawable/search_floating_selector"
        android:clickable="false"
        android:padding="10dp"
        android:src="@mipmap/folder" />

    <ImageView
        android:id="@+id/search"
        android:layout_width="@dimen/search_expanded_level2_size"
        android:layout_height="@dimen/search_expanded_level2_size"
        android:background="@drawable/search_floating_selector"
        android:clickable="false"
        android:padding="10dp"
        android:src="@mipmap/search_button" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/iat_title_bar"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_margin="6dp"
                android:layout_height="30dp">
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/iat_mode_show"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:textSize="18sp"
                    android:paddingLeft="6dp"
                    android:layout_height="match_parent"
                    android:text="识别模式：英语"
                    />
                <TextView
                    android:id="@+id/iat_set"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingRight="6dp"
                    android:gravity="center|right"
                    android:text="设置"
                    android:textStyle="bold"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <View
                android:id="@+id/iat_line"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="#888888"
                android:layout_below="@+id/iat_title_bar"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <EditText

                android:lineSpacingExtra="2dp"
                android:padding="6dp"
                android:textSize="16sp"
                android:layout_margin="6dp"
                android:layout_below="@+id/iat_line"
                android:id="@+id/iat_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"/>

            <LinearLayout
                android:id="@+id/iat_bottom"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/iat_clear"
                    android:src="@mipmap/delete_item"
                    android:layout_marginBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/iat_recognize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/msciat_listen_selector"
                    android:textColor="#eeeeee"
                    android:textSize="30sp"
                    android:text="听" />
            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>